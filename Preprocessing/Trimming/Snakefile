## Snakefile for UMI extraction, trimming with Trim Galore, and PolyA trimming

# 1. Sample identifiers
SAMPLES = ["195", "197", "199", "200"]

# 2. Paths
CB_WHITELIST = "/home/lulunots/Documents/1_ncRNA/4_datafiles/SORTseq_cellbarcodes.tsv"
FASTQ_DIR    = "/home/lulunots/Documents/1_ncRNA/3_fastq"

rule all:
    input:
        # UMI extraction outputs
        expand(f"{FASTQ_DIR}/UMI-tools_extract_{{platenr}}/processed_{{platenr}}_R1.fastq", platenr=SAMPLES),
        expand(f"{FASTQ_DIR}/UMI-tools_extract_{{platenr}}/processed_{{platenr}}_R2.fastq", platenr=SAMPLES),
        # TrimGalore outputs
        expand(f"{FASTQ_DIR}/trimgalore/cutadapt_{{platenr}}_R2_cutfive_reverse_control.fastq", platenr=SAMPLES),
        # PolyA trimming outputs
        expand(f"{FASTQ_DIR}/PolyA_trimmed/PolyA_trimmed_{{platenr}}_R2.fastq", platenr=SAMPLES)

rule extract_umi:
    input:
        r1        = lambda wc: f"{FASTQ_DIR}/ERA-MC-v{wc.platenr}_fastq/*R1_001.fastq",
        r2        = lambda wc: f"{FASTQ_DIR}/ERA-MC-v{wc.platenr}_fastq/*R2_001.fastq",
        whitelist = CB_WHITELIST
    output:
        r1_out = f"{FASTQ_DIR}/UMI-tools_extract_{{platenr}}/processed_{{platenr}}_R1.fastq",
        r2_out = f"{FASTQ_DIR}/UMI-tools_extract_{{platenr}}/processed_{{platenr}}_R2.fastq",
        log    = f"{FASTQ_DIR}/UMI-tools_extract_{{platenr}}/umi_tools_{{platenr}}_log.txt"
    params:
        outdir = f"{FASTQ_DIR}/UMI-tools_extract_{{platenr}}"
    shell:
        """
        mkdir -p {params.outdir}
        umi_tools extract \
          --stdin={input.r1} \
          --stdout={output.r1_out} \
          --bc-pattern=NNNNNNCCCCCCCC \
          --read2-in={input.r2} \
          --read2-out={output.r2_out} \
          --whitelist={input.whitelist} \
          --log={output.log}
        """

rule trim_r2:
    input:
        r2 = rules.extract_umi.output.r2_out
    output:
        trimmed = f"{FASTQ_DIR}/trimgalore/cutadapt_{{platenr}}_R2_cutfive_reverse_control.fastq"
    params:
        outdir   = f"{FASTQ_DIR}/trimgalore",
        cutadapt = "/home/lulunots/anaconda3/bin/cutadapt"
    shell:
        """
        mkdir -p {params.outdir}
        trim_galore --path_to_cutadapt {params.cutadapt} --output_dir {params.outdir} {input.r2}
        mv {params.outdir}/$(basename {input.r2})_trimming_report.txt {output.trimmed}
        """

rule polyA_trim:
    input:
        r2 = f"{FASTQ_DIR}/trimgalore/cutadapt_{{platenr}}_R2_cutfive_reverse_control.fastq"
    output:
        trimmed = f"{FASTQ_DIR}/PolyA_trimmed/PolyA_trimmed_{{platenr}}_R2.fastq",
        log     = f"{FASTQ_DIR}/PolyA_trimmed/PolyA_trimmed_{{platenr}}_R2.log"
    params:
        outdir = f"{FASTQ_DIR}/PolyA_trimmed"
    shell:
        """
        mkdir -p {params.outdir}
        cutadapt -m 15 --trim-n -a "polyA1=AA{{5}}" \
          -o {output.trimmed} {input.r2} > {output.log} 2>&1
        """
